<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    >

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:orientation="vertical"
	    android:padding="20dp"
       >



	    <EditText
	        android:id="@+id/detail"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_text"
	        android:ems="10"
            android:height="40dp"
            android:hint="Vacancy"
            android:layout_alignTop="@+id/time"
            android:layout_alignRight="@+id/date"
            android:layout_alignEnd="@+id/date"
            android:layout_marginTop="43dp"
            android:inputType="number" />
        <EditText
            android:id="@+id/contact"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_text"
            android:ems="10"
            android:height="40dp"
            android:hint="Phone No"
            android:inputType="phone"
            android:layout_alignBottom="@+id/time"
            android:layout_alignLeft="@+id/detail"
            android:layout_alignStart="@+id/detail" />


	    <Button
	        android:id="@+id/requestButton"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_button"
	        android:text="Done"
	        android:textColor="#fff"
            android:onClick="setValue"
            android:clickable="true"
            android:layout_below="@+id/setpointbutton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <DatePicker
            android:layout_width="50dp"
            android:layout_height="200dp"
            android:id="@+id/date"
            android:layout_alignTop="@+id/date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
           />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_button"
            android:text="Set Route"
            android:id="@+id/setpointbutton"
            android:onClick="getPoints"
            android:clickable="true"
            android:layout_below="@+id/time"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"/>

        <TimePicker
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:layout_below="@+id/date"
            android:layout_alignLeft="@+id/time"
            android:layout_alignStart="@+id/time"
            />

    </RelativeLayout>

</RelativeLayout>
