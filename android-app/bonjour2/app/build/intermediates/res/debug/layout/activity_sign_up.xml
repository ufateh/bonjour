<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    >

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:orientation="vertical"
	    android:padding="20dp"
        android:background="#ff314352">

	    <Button
	        android:id="@+id/requestButton"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:layout_above="@+id/login"
	        android:layout_alignLeft="@+id/signUpPassword"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/rounded_corner_button"
	        android:clickable="true"
	        android:onClick="signUpClick"
	        android:text="SignUp"
	        android:textColor="#fff" />

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/signUpUserName"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="10dp"
	        android:text="User Name"
            android:textColor="@android:color/white"/>

	    <EditText
	        android:id="@+id/signUpUserName"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/signUpEmail"
	        android:layout_below="@+id/textView1"
	        android:layout_marginTop="5dp"
	        android:background="@drawable/rounded_corner_text"
	        android:ems="10"
	        android:height="40dp" />

	    <TextView
	        android:id="@+id/textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        
	         android:layout_alignLeft="@+id/signUpCity"
	        android:layout_below="@+id/signUpAdress"
	        android:layout_marginTop="9dp"
            android:textColor="@android:color/white"
	       
	        android:text="City" />

	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/signUpEmail"
	        android:layout_below="@+id/signUpUserName"
	        android:layout_marginTop="9dp"
	        android:text="Email"
            android:textColor="@android:color/white"/>

	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/signUpAdress"
	        android:layout_below="@+id/signUpEmail"
	        android:layout_marginTop="11dp"
	        android:text="Gender"
            android:textColor="@android:color/white"/>

	    <TextView
	        android:id="@+id/textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/signUpPassword"
	        android:layout_below="@+id/signUpCity"
	        android:layout_marginTop="9dp"
	        android:text="Password"
            android:textColor="@android:color/white"/>
	    
	        <TextView
	        android:id="@+id/age"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/signUpage"
	        android:layout_below="@+id/signUpPassword"
	        android:layout_marginTop="9dp"
	        android:text="Age"
                android:textColor="@android:color/white"/>

	        <EditText
	            android:id="@+id/signUpEmail"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/textView3"
	            android:layout_below="@+id/textView2"
	            android:layout_marginTop="5dp"
	            android:background="@drawable/rounded_corner_text"
	            android:ems="10"
	            android:inputType="textEmailAddress"
	            android:height="40dp" />

	        <EditText
	            android:id="@+id/signUpAdress"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/textView3"
	            android:layout_marginTop="5dp"
	            android:layout_centerHorizontal="true"
	            android:background="@drawable/rounded_corner_text"
	            android:ems="10"
	            android:height="40dp" >

	            <requestFocus />
	        </EditText>

	        <EditText
	            android:id="@+id/signUpCity"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/signUpAdress"
	            android:layout_below="@+id/textView5"
	            android:layout_marginTop="5dp"
	            android:background="@drawable/rounded_corner_text"
	            android:ems="10"
	            android:height="40dp" />

	        <EditText
	            android:id="@+id/signUpPassword"
	            android:layout_width="fill_parent"
	            android:layout_height="40dp"
	            android:layout_alignLeft="@+id/signUpCity"
	            android:layout_below="@+id/textView4"
	            android:layout_marginTop="5dp"
	            android:background="@drawable/rounded_corner_text"
	            android:ems="10"
	            android:inputType="textPassword"
	            android:height="40dp" />

	        <EditText
	            android:id="@+id/signUpage"
	            android:layout_width="fill_parent"
	            android:layout_height="40dp"
	            android:layout_alignLeft="@+id/requestButton"
	            android:layout_below="@+id/age"
	            android:layout_marginTop="5dp"
	            android:background="@drawable/rounded_corner_text"
	            android:ems="10"
	            android:inputType="phone"
	            android:height="40dp" />

	        <TextView
	            android:id="@+id/login"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            android:layout_marginBottom="5dp"
	            android:clickable="true"
	            android:onClick="onLognInClick"
	            android:text="Have an account ? LogIn"
	            android:textColor="#CF0000" />

	</RelativeLayout>

</RelativeLayout>
